- @page_title = @project.send("name_#{locale}")
- @body_class = "projects"

/ %p#notice= notice

%p.user
  Created by
  = link_to @project.user.name, user_path(@project.user)

%table.simple_table
  %tr
    %th== #{t('title').titleize}:
    %td
      - locale_attr_or_alt_haml(@project, "name")
  %tr
    %th== #{t('description').titleize}:
    %td
      - locale_attr_or_alt_haml(@project, "description")
  %tr
    %th== #{t('location').titleize}:
    %td
      - @project.kabupatens.each do |kabupaten|
        %strong= "#{kabupaten.province.name}: "
        = link_to kabupaten.category_name, kabupaten
        %br
  %tr
    %th== #{t('sector').titleize}:
    %td
      - @project.sectors.sort_by(&"name_#{locale}".to_sym).each do |sector|
        = sector.send("name_#{locale}")
        %br
          
- if can? :update, @project
  = link_to 'Edit', edit_project_path(@project), :class => 'btn'
= link_to 'Back', projects_path, :class => 'btn'
