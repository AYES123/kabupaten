- @page_title = "#{(t('kabupaten.province'))} #{@province.name}"
- @body_class = "provinces"

/ %p#notice= notice

%p
  = @province.description

- content_for :sidebar do

  %p
    %b= "#{t('kabupaten.area')}:"
    = @province.area
  %p
    %b= "#{(t'kabupaten.population')}:"
    = @province.population

- content_for :bottom do
  = link_to 'Edit', edit_province_path(@province), :class => 'btn'
  = link_to 'Back', :back, :class => 'btn'
