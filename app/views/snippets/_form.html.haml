:plain
  <script type="text/javascript">
         bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
  </script>

= form_for @snippet, :html => { :class => 'form-horizontal' } do |f|
  -if @snippet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@snippet.errors.count, "error")} prohibited this snippet from being saved:"
      %ul
        - @snippet.errors.full_messages.each do |msg|
          %li= msg

  .field.control-group
    = f.label 'Key', :class => 'control-label'
    .controls
      = f.text_field :key, :class => 'text_field'
  .field.control-group
    = f.label 'Description', :class => 'control-label'
    .controls
      = f.text_area :description, :rows => 5, :class => 'text_area', :style => 'width: 500px'
  .field.control-group
    = f.label 'Body', :class => 'control-label'
    .controls
      = f.text_area :body, :rows => 5, :class => 'text_area', :style => 'width: 500px'


  .actions.form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
