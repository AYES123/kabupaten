- @page_title = "Kabupaten #{@kabupaten.name}"
- @body_class = "kabupatens"

/ %p#notice= notice

%p
  %b Description:
  = @kabupaten.description_en

- content_for :sidebar do

  %p
    %b Area:
    = @kabupaten.area
  %p
    %b Population:
    = @kabupaten.population
  %p
    %b Capital:
    = @kabupaten.capital
  %p
    %b Province:
    = @kabupaten.province.name

- content_for :bottom do
  = link_to 'Edit', edit_kabupaten_path(@kabupaten), :class => 'btn'
  = link_to 'Back', kabupatens_path, :class => 'btn'
