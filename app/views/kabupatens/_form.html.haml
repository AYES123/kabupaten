= form_for @kabupaten, :html => { :class => 'form-horizontal' } do |f|
  -if @kabupaten.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kabupaten.errors.count, "error")} prohibited this kabupaten from being saved:"
      %ul
        - @kabupaten.errors.full_messages.each do |msg|
          %li= msg

  .field.control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .field.control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .field.control-group
    = f.label :area, :class => 'control-label'
    .controls
      = f.number_field :area, :class => 'number_field'
  .field.control-group
    = f.label :population, :class => 'control-label'
    .controls
      = f.number_field :population, :class => 'number_field'
  .field.control-group
    = f.label :province_id, :class => 'control-label'
    .controls
      = f.number_field :province_id, :class => 'number_field'
  .actions.form-actions
    = f.submit 'Save', :class => 'btn btn-primary'
